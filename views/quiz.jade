extends layout

block content
  h1= title
  if schow
    form(method='post')
      p Pytanie
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zagłosuj')
      p Aby zobaczyć wynik oddaj głos
  else
    h1 Już głosowałeś
    p Wynik
    ul
      each item in data
        li #{item.title} głosów: #{item.vote}  (#{Math.round(item.vote/sum*100)}%)
    p Głosów oddano : #{sum}
